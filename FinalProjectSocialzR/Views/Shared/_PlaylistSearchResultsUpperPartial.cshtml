@model FinalProjectSocialzR.ViewModel.PlaylistWithSocialMessagesVM


    <span class="glyphicon glyphicon-comment"></span>
    <h3 class="panel-title">
        Moderated Comments
    </h3>
    
    <div class="playlist-buttons pull-right">
        <!-- Trigger the modal with a button -->

        <div class="dropdown">

            <buttonplaylist type="button" class="btn btn-primary btn-xs" title="Select Playlist" data-toggle="dropdown">
                <span class="glyphicon glyphicon-search"></span>
                <span class="caret"></span>
            </buttonplaylist>
            <ul id="drop-menu" class="dropdown-menu">
                @foreach (var item in Model.AllPlaylist)
                {
                    var length = Model.AllPlaylist.Count();
                    var counter = 2;
                    var selected = "";
                    var word = "";
                    if (item.Id == Model.Id)
                    {
                        selected = "selected-playlist";
                    }


                    <li id="playlist-@item.Id" class="@selected" onclick="runPlaylistSearch(this, @item.Id);" data-id="@item.Id"><a href="#">@item.PlaylistName</a></li>
                    counter++;
                }
            </ul>
            <span class="label label-info pull-left" placeholder="No Playlist Selected" id="playlistDisplayName">
                @Model.PlayListName
                
                @if (Model.PlayListName == null)
                {
                    <span>No PlayList Selected</span>
                }
            </span>
            <buttonplaylist type="button" class="btn btn-success btn-xs" title="Export Playlist" data-toggle="modal" data-target="#rssdownloadmodal" onclick="setRSSUrl();">
                <span class="glyphicon glyphicon-save"></span>
            </buttonplaylist>
            <buttonplaylist type="button" class="btn btn-danger btn-xs" title="Playlist Configuration" data-toggle="modal" data-target="#myModal">
                <span class="glyphicon glyphicon-cog"></span>
            </buttonplaylist>
            @Html.Partial("_PlaylistPartial", Model)

        </div>

        <!-- line modal -->
        <div class="modal" id="rssdownloadmodal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                        <h3 class="modal-title" id="lineModalLabel">Playlist Export</h3>
                    </div>
                    <div class="modal-body">
                        <!-- content goes here -->
                        <form>
                            <div class="form-group">
                                <label for="rssdownloadmodal">RSS URL:</label>
                                <input type="email" class="form-control" id="rssdownloadmodaltextbox" placeholder="No URL Found" value="">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-default" data-dismiss="modal" role="button">Close</button>
                            </div>
                            <div class="btn-group btn-delete hidden" role="group">
                                <button type="button" id="delImage" class="btn btn-default btn-hover-red" data-dismiss="modal" role="button">Delete</button>
                            </div>
                            <div class="btn-group" role="group">
                                <button type="button" id="saveImage" class="btn btn-default btn-hover-green close" role="button" data-dismiss="modal" onclick="somethinedosomething();">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--modal stuff-->
    </div>

