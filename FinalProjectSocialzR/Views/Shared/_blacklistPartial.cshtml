@model IEnumerable<FinalProjectSocialzR.Models.Blacklist>

<span id="EditBlacklistTarget">
    <span class="center"><button data-toggle="modal" data-target="#BlacklistEditModal" class="btn btn-primary center-block" style="padding-left: 26px; padding-right: 26px; margin-bottom: 10px;">Edit</button></span>
    <!-- line modal -->
    <div class="modal" id="BlacklistEditModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                    <h3 class="modal-title" id="lineModalLabel">User Defined Blacklist Catalog</h3>
                </div>
                <div class="modal-body">

                    <table class="table table-striped custab">
                        <thead>


                            <tr>
                                <th>ID</th>
                                <th>Blacklist Word</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            if (item.Id > 313)
                            {
                                <tr>
                                    <td>@item.Id </td>
                                    <td>@item.Word</td>
                                    <td class="text-center">
                                        <a class="btn btn-primary btn-xs" data-toggle="modal" data-target="#editBlacklistModal-@item.Id" title="Edit">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                        <a href="#" class="btn btn-danger btn-xs" title="Delete" data-dismiss="modal" onclick="DeleteBlacklist(this, @item.Id);">
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                    </td>
                                </tr>

    <!-- line modal -->
                                <div class="modal" id="editBlacklistModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
                                    <div class="modal-content">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h3 class="modal-title" id="lineModalLabel">Edit Blacklist Word</h3>
                                            </div>
                                            <div class="modal-body">
                                                <!-- content goes here -->

                                                <form>
                                                    <div class="form-group">
                                                        <label for="BlacklistedWord-@item.Id">Blacklisted Word</label>
                                                        <input type="email" class="form-control" id="BlacklistedWord-@item.Id" placeholder="Enter Blacklisted Word" value="@item.Word">
                                                        <div class="btn-group" role="group">
                                                            <button type="button" id="saveImage" class="btn btn-success" data-dismiss="modal" role="button" onclick="SaveBlacklistEdit(this, @item.Id);">Save &nbsp;<i class="fa fa-save" aria-hidden="true"></i></button>
                                                        </div>
                                                    </div>
                                                </form>

                                            </div>
                                            <div class="modal-footer">

                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }


                        }

                    </table>

                    <!-- content goes here -->
                    <div class="modal-footer">

                    </div>
                    <div class="modal-body">
                        <form>
                            <h4>Add new word to Blacklist</h4>
                            <div class="form-group">
                                <label for="blacklistWordInput"></label>
                                <input type="email" class="form-control" id="blacklistWordInput" placeholder="Enter Word">
                            </div>
                        </form>
                        <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                            <div class="btn-group bt" role="group">
                                <button type="button" id="saveNewBlacklistedWord" class="btn btn-success" data-dismiss="modal" role="button" onclick="AddBlacklist();">Save &nbsp;<i class="fa fa-save" aria-hidden="true"></i></button>
                            </div>
                        </div>

                    </div>
                    </div>
                
            </div>
        </div>
    </div>
</span>




